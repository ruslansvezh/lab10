#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	    setlocale(0, "");
		int N, k = 0;
		cout << "Введите число N : ";
		cin >> N;
		cout << endl;
		if (N > 0)
		{	
			for (int i = 1; i < (N + 1); i++)
			{
				k = k + (2 * i - 1);
				cout << i << "^2" << "=" << k << endl;
			}
		}
		else
		{
			cout << "Введены неверные данные!" << endl;
		}
	} 
	
